    @model vidly.Models.Movie
    @using vidly.Models
*@

@model vidly.ViewModel.MovieViewModel

@{
    ViewBag.Title = "List of movies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@*<h2>@Model.Name</h2>
    @*<h2>@( ((Movie) ViewData["movie"]).Name)</h2*@

@*<h2>@Model.Movie.Name</h2>*@

@{
    var className = Model.Movies.Count() > 1 ? "Popular" : null;
}

<h1 class="@className">Liste of movies </h1>



@{
    if (Model.Movies.Count() == 0)
    {
        <h2>We don't have movies </h2>
    }
    else
    {

        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Nom</th> 
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Movies)
                {
                    <tr class="table-secondary">
                        <th scope="row">@item.Id</th> 
                        <td>@Html.ActionLink(item.Name, "DetailMovie", "Movie", new { id = item.Id }, null)</td> 
                    </tr>
                }
            </tbody>
        </table>
    }
}
